apiVersion: k0sctl.k0sproject.io/v1beta1
kind: Cluster
metadata:
  name: k0s-cluster
  user: admin
spec:
  hosts:
    - role: controller
      ssh:
        address: ${CONTROLLER_IP}
        user: ${SSH_USER}
        keyPath: ${SSH_PRIVATE_KEY_PATH}
      hooks:
        apply:
          before:
          - mkdir -p /etc/systemd/system/k0scontroller.service.d
          - |
            cat <<EOF > /etc/systemd/system/k0scontroller.service.d/override.conf
            [Unit]
            After=systemd-timesyncd.service
            Wants=systemd-timesyncd.service

            [Service]
            ExecStartPre=/bin/bash -c 'while [ "\$(timedatectl show -p NTPSynchronized --value)" != "yes" ]; do sleep 1; done'
            EOF
          - systemctl daemon-reload
    - role: worker
      ssh:
        address: ${WORKER_IP}
        user: ${SSH_USER}
        keyPath: ${SSH_PRIVATE_KEY_PATH}
    - role: worker
      ssh:
        address: ${WORKER2_IP}
        user: ${SSH_USER}
        keyPath: ${SSH_PRIVATE_KEY_PATH}
    - role: worker
      ssh:
        address: ${WORKER3_IP}
        user: ${SSH_USER}
        keyPath: ${SSH_PRIVATE_KEY_PATH}
  options:
    wait:
      enabled: true
    drain:
      enabled: true
      gracePeriod: 2m0s
      timeout: 5m0s
      force: true
      ignoreDaemonSets: true
      deleteEmptyDirData: true
      podSelector: ""
      skipWaitForDeleteTimeout: 0s
    concurrency:
      limit: 30
      workerDisruptionPercent: 10
      uploads: 5
    evictTaint:
      enabled: false
      taint: k0sctl.k0sproject.io/evict=true
      effect: NoExecute
      controllerWorkers: false
